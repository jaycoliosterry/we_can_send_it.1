<%- model_class = Recipient -%>
<div class="page-header">
  <h1><%=t '.title', :default => Recipient %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address_id) %></dt>
      <dd><pre class="prettyprint"><%= @recipient.address_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:recipient_name) %></dt>
      <dd><pre class="prettyprint"><%= @recipient.recipient_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:recipient_job_title) %></dt>
      <dd><pre class="prettyprint"><%= @recipient.recipient_job_title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:recipient_email_address) %></dt>
      <dd><pre class="prettyprint"><%= @recipient.recipient_email_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:recipient_phone_number) %></dt>
      <dd><pre class="prettyprint"><%= @recipient.recipient_phone_number %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              recipients_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_recipient_path(@recipient), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              recipient_path(@recipient),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

