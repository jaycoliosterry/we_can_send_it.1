<%- model_class = Recipient -%>
<div class="page-header">
  <h1><%=t '.title', :default => Recipient %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:address_id) %></th>
      <th><%= model_class.human_attribute_name(:recipient_name) %></th>
      <th><%= model_class.human_attribute_name(:recipient_job_title) %></th>
      <th><%= model_class.human_attribute_name(:recipient_email_address) %></th>
      <th><%= model_class.human_attribute_name(:recipient_phone_number) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @recipients.each do |recipient| %>
      <tr>
        <td><%= recipient.id %></td>
        <td><%= recipient.address_id %></td>
        <td><%= recipient.recipient_name %></td>
        <td><%= recipient.recipient_job_title %></td>
        <td><%= recipient.recipient_email_address %></td>
        <td><%= recipient.recipient_phone_number %></td>
        <td><%=l recipient.created_at, format: :long %></td>
        <td>
          <%= link_to recipient_path(recipient), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to recipient_path(recipient), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_recipient_path,
            :class => 'btn btn-primary' %>
