<%= form_for @recipient, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :address_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :address_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :recipient_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :recipient_name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :recipient_job_title, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :recipient_job_title, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :recipient_email_address, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.email_field :recipient_email_address, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :recipient_phone_number, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :recipient_phone_number, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  recipients_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
