<%- model_class = Address -%>
<div class="page-header">
  <h1><%=t '.title', :default => Address %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:receiver_company_id) %></dt>
      <dd><pre class="prettyprint"><%= @address.receiver_company_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:receiver_company_name) %></dt>
      <dd><pre class="prettyprint"><%= @address.receiver_company_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:receiver_company_contact_name) %></dt>
      <dd><pre class="prettyprint"><%= @address.receiver_company_contact_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address_book_id) %></dt>
      <dd><pre class="prettyprint"><%= @address.address_book_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address_line_1) %></dt>
      <dd><pre class="prettyprint"><%= @address.address_line_1 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address_line_2) %></dt>
      <dd><pre class="prettyprint"><%= @address.address_line_2 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:zip_or_postcode) %></dt>
      <dd><pre class="prettyprint"><%= @address.zip_or_postcode %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:city) %></dt>
      <dd><pre class="prettyprint"><%= @address.city %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:state_or_region) %></dt>
      <dd><pre class="prettyprint"><%= @address.state_or_region %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:country_id) %></dt>
      <dd><pre class="prettyprint"><%= @address.country_id %></pre></dd>
      <dd><pre class="prettyprint"><%= address.expresscountry.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:brazilian_federal_tax_id) %></dt>
      <dd><pre class="prettyprint"><%= @address.brazilian_federal_tax_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:brazilian_state_tax_id) %></dt>
      <dd><pre class="prettyprint"><%= @address.brazilian_state_tax_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:chinese_cr_code) %></dt>
      <dd><pre class="prettyprint"><%= @address.chinese_cr_code %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              addresses_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_address_path(@address), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              address_path(@address),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

