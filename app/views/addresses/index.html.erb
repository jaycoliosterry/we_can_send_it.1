<%- model_class = Address -%>
<div class="page-header">
  <h1><%=t '.title', :default => Address %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:receiver_company_id) %></th>
      <th><%= model_class.human_attribute_name(:receiver_company_name) %></th>
      <th><%= model_class.human_attribute_name(:receiver_company_contact_name) %></th>
      <th><%= model_class.human_attribute_name(:address_book_id) %></th>
      <th><%= model_class.human_attribute_name(:address_line_1) %></th>
      <th><%= model_class.human_attribute_name(:address_line_2) %></th>
      <th><%= model_class.human_attribute_name(:zip_or_postcode) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:state_or_region) %></th>
      <th><%= model_class.human_attribute_name(:country_id) %></th>
      <th><%= model_class.human_attribute_name(:brazilian_federal_tax_id) %></th>
      <th><%= model_class.human_attribute_name(:brazilian_state_tax_id) %></th>
      <th><%= model_class.human_attribute_name(:chinese_cr_code) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.id %></td>
        <td><%= address.receiver_company_id %></td>
        <td><%= address.receiver_company_name %></td>
        <td><%= address.receiver_company_contact_name %></td>
        <td><%= address.address_book_id %></td>
        <td><%= address.address_line_1 %></td>
        <td><%= address.address_line_2 %></td>
        <td><%= address.zip_or_postcode %></td>
        <td><%= address.city %></td>
        <td><%= address.state_or_region %></td>
        <td><%= address.country_id %></td>
        <td><%= address.brazilian_federal_tax_id %></td>
        <td><%= address.brazilian_state_tax_id %></td>
        <td><%= address.chinese_cr_code %></td>
        <td><%=l address.created_at, format: :long %></td>
        <td>
          <%= link_to address_path(address), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to address_path(address), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_address_path,
            :class => 'btn btn-primary' %>
