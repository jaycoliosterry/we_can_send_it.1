<%= form_for @address, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :receiver_company_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :receiver_company_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :receiver_company_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :receiver_company_name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :receiver_company_contact_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :receiver_company_contact_name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address_book_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :address_book_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address_line_1, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :address_line_1, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address_line_2, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :address_line_2, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :zip_or_postcode, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :zip_or_postcode, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :city, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :city, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state_or_region, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :state_or_region, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.select(:country_id, :class => 'select form-control') do %>
      <% ExpressCountries.pluck(:id, :country).each do |c| -%>
        <%= content_tag(:option, c.last, value: c.first) %>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :brazilian_federal_tax_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :brazilian_federal_tax_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :brazilian_state_tax_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :brazilian_state_tax_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :chinese_cr_code, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :chinese_cr_code, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  addresses_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
