<%- model_class = EmailTemplate -%>
<div class="page-header">
  <h1><%=t '.title', :default => EmailTemplate %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:available_to_entire_company) %></dt>
      <dd><pre class="prettyprint"><%= @email_template.available_to_entire_company %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:reply_to_email_address) %></dt>
      <dd><pre class="prettyprint"><%= @email_template.reply_to_email_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email_subject) %></dt>
      <dd><pre class="prettyprint"><%= @email_template.email_subject %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email_body) %></dt>
      <dd><pre class="prettyprint"><%= @email_template.email_body %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:css) %></dt>
      <dd><pre class="prettyprint"><%= @email_template.css %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              email_templates_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_email_template_path(@email_template), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              email_template_path(@email_template),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

