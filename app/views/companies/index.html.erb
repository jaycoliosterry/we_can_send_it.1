<h1>Listing companies</h1>

<table>
  <thead>
    <tr>
      <th>Wcsi admin</th>
      <th>Company name</th>
      <th>User admin</th>
      <th>Department</th>
      <th>Shipping address line 1</th>
      <th>Shipping address line 2</th>
      <th>Shipping postcode or zip</th>
      <th>Shipping city</th>
      <th>Shipping state or region</th>
      <th>Shipping country</th>
      <th>Billing address line 1</th>
      <th>Billing address line 2</th>
      <th>Billing city</th>
      <th>Billing state or region</th>
      <th>Billing country</th>
      <th>Express courier rate</th>
      <th>Economy courier rate</th>
      <th>Postal courier rate</th>
      <th>Billing email address</th>
      <th>Main telephone number</th>
      <th>User</th>
      <th>Invoice line item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.wcsi_admin %></td>
        <td><%= company.company_name %></td>
        <td><%= company.user_admin_id %></td>
        <td><%= company.department %></td>
        <td><%= company.shipping_address_line_1 %></td>
        <td><%= company.shipping_address_line_2 %></td>
        <td><%= company.shipping_postcode_or_zip %></td>
        <td><%= company.shipping_city %></td>
        <td><%= company.shipping_state_or_region %></td>
        <td><%= company.shipping_country_id %></td>
        <td><%= company.billing_address_line_1 %></td>
        <td><%= company.billing_address_line_2 %></td>
        <td><%= company.billing_city %></td>
        <td><%= company.billing_state_or_region %></td>
        <td><%= company.billing_country_id %></td>
        <td><%= company.express_courier_rate_id %></td>
        <td><%= company.economy_courier_rate_id %></td>
        <td><%= company.postal_courier_rate_id %></td>
        <td><%= company.billing_email_address %></td>
        <td><%= company.main_telephone_number %></td>
        <td><%= company.user %></td>
        <td><%= company.invoice_line_item %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

