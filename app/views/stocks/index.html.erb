<%- model_class = Stock -%>
<div class="page-header">
  <h1><%=t '.title', :default => Stock %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:mark_stock_as_to_be_destroyed) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:client_reference_code) %></th>
      <th><%= model_class.human_attribute_name(:height_in_cm) %></th>
      <th><%= model_class.human_attribute_name(:width_in_cm) %></th>
      <th><%= model_class.human_attribute_name(:length_in_cm) %></th>
      <th><%= model_class.human_attribute_name(:paper_size) %></th>
      <th><%= model_class.human_attribute_name(:number_of_pages) %></th>
      <th><%= model_class.human_attribute_name(:weight_in_kg) %></th>
      <th><%= model_class.human_attribute_name(:stock_image) %></th>
      <th><%= model_class.human_attribute_name(:quantity_currently_in_stock) %></th>
      <th><%= model_class.human_attribute_name(:total_ever_in_stock) %></th>
      <th><%= model_class.human_attribute_name(:total_ever_sent) %></th>
      <th><%= model_class.human_attribute_name(:total_damaged_or_destroyed) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.id %></td>
        <td><%= stock.mark_stock_as_to_be_destroyed %></td>
        <td><%= stock.title %></td>
        <td><%= stock.description %></td>
        <td><%= stock.client_reference_code %></td>
        <td><%= stock.height_in_cm %></td>
        <td><%= stock.width_in_cm %></td>
        <td><%= stock.length_in_cm %></td>
        <td><%= stock.paper_size %></td>
        <td><%= stock.number_of_pages %></td>
        <td><%= stock.weight_in_kg %></td>
        <td><%= stock.stock_image %></td>
        <td><%= stock.quantity_currently_in_stock %></td>
        <td><%= stock.total_ever_in_stock %></td>
        <td><%= stock.total_ever_sent %></td>
        <td><%= stock.total_damaged_or_destroyed %></td>
        <td><%=l stock.created_at, format: :long %></td>
        <td>
          <%= link_to stock_path(stock), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to stock_path(stock), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_stock_path,
            :class => 'btn btn-primary' %>
