<%- model_class = Stock -%>
<div class="page-header">
  <h1><%=t '.title', :default => Stock %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:mark_stock_as_to_be_destroyed) %></dt>
      <dd><pre class="prettyprint"><%= @stock.mark_stock_as_to_be_destroyed %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @stock.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @stock.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:client_reference_code) %></dt>
      <dd><pre class="prettyprint"><%= @stock.client_reference_code %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:height_in_cm) %></dt>
      <dd><pre class="prettyprint"><%= @stock.height_in_cm %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:width_in_cm) %></dt>
      <dd><pre class="prettyprint"><%= @stock.width_in_cm %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:length_in_cm) %></dt>
      <dd><pre class="prettyprint"><%= @stock.length_in_cm %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:paper_size) %></dt>
      <dd><pre class="prettyprint"><%= @stock.paper_size %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:number_of_pages) %></dt>
      <dd><pre class="prettyprint"><%= @stock.number_of_pages %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:weight_in_kg) %></dt>
      <dd><pre class="prettyprint"><%= @stock.weight_in_kg %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:stock_image) %></dt>
      <dd><pre class="prettyprint"><%= @stock.stock_image %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:quantity_currently_in_stock) %></dt>
      <dd><pre class="prettyprint"><%= @stock.quantity_currently_in_stock %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:total_ever_in_stock) %></dt>
      <dd><pre class="prettyprint"><%= @stock.total_ever_in_stock %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:total_ever_sent) %></dt>
      <dd><pre class="prettyprint"><%= @stock.total_ever_sent %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:total_damaged_or_destroyed) %></dt>
      <dd><pre class="prettyprint"><%= @stock.total_damaged_or_destroyed %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              stocks_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_stock_path(@stock), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              stock_path(@stock),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

