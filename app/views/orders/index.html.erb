<%- model_class = Order -%>
<div class="page-header">
  <h1><%=t '.title', :default => Order %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:delivery_status) %></th>
      <th><%= model_class.human_attribute_name(:customer_comments) %></th>
      <th><%= model_class.human_attribute_name(:customer_uploaded_file) %></th>
      <th><%= model_class.human_attribute_name(:send_confirmation_emails_to_recipients) %></th>
      <th><%= model_class.human_attribute_name(:total_order_weight) %></th>
      <th><%= model_class.human_attribute_name(:wcsi_total_order_cost) %></th>
      <th><%= model_class.human_attribute_name(:customer_total_order_cost_pre_tax) %></th>
      <th><%= model_class.human_attribute_name(:any_taxable_shipments) %></th>
      <th><%= model_class.human_attribute_name(:total_tax_on_order) %></th>
      <th><%= model_class.human_attribute_name(:customer_total_order_cost_with_tax) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>ORD_<%= order.id %></td>
        <td><%= order.delivery_status %></td>
        <td><%= order.customer_comments %></td>
        <td><%= order.customer_uploaded_file %></td>
        <td><%= order.send_confirmation_emails_to_recipients %></td>
        <td><%= order.total_order_weight %></td>
        <td><%= order.wcsi_total_order_cost %></td>
        <td><%= order.customer_total_order_cost_pre_tax %></td>
        <td><%= order.any_taxable_shipments %></td>
        <td><%= order.total_tax_on_order %></td>
        <td><%= order.customer_total_order_cost_with_tax %></td>
        <td><%=l order.created_at, format: :long %></td>
        <td>
          <%= link_to order_path(order), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to order_path(order), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_order_path,
            :class => 'btn btn-primary' %>
