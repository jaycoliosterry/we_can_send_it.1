<%= form_for @order, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :delivery_status, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :delivery_status, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :customer_comments, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :customer_comments, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :customer_uploaded_file, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :customer_uploaded_file, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :send_confirmation_emails_to_recipients, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :send_confirmation_emails_to_recipients, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :order_number, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :order_number, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :total_order_weight, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :total_order_weight, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :wcsi_total_order_cost, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :wcsi_total_order_cost, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :customer_total_order_cost_pre_tax, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :customer_total_order_cost_pre_tax, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :any_taxable_shipments, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :any_taxable_shipments, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :total_tax_on_order, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :total_tax_on_order, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :customer_total_order_cost_with_tax, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :customer_total_order_cost_with_tax, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  orders_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
